{
    "llm_config": {
        "model_name": "gpt-4o",
    },
    "tools": [
        # These tool definitions do not have to be in any particular order
        # How they are linked and call each other is defined within their
        # own specs.  This could be a graph, potentially even with cycles.

        # This first guy is the "Front Man".  He is identified as such because
        # he is the only one with no parameters in his function definition,
        # and therefore he needs to talk to the outside world to get things rolling.
        {
            "name": "NowAgents",

            # Note that there are no parameters defined for this guy's "function" key.
            # This is the primary way to identify this tool as a front-man,
            # distinguishing it from the rest of the tools.

            "function": {
                "description": "Assist the user with queries related to ServiceNow."
                "parameters": {
                    "type": "object",
                    "properties": {
                        "inquiry": {
                            "type": "string",
                            "description": """
    An inquiry from a user.
    """
                        },
                    },
                    "required": ["inquiry"]
                }
            },
            "instructions": """
You are a ServiceNow AI agent. Get available agents first, select the best one for the inquiry, send the message, then retrieve the response.
""",
            # Specify the sly data that should come back from the tools to the client.
            # The session is initiated by the tool, and the client must re-use it to continue the conversation.
            "allow": {
                "to_upstream": {
                    "sly_data": {
                        "session_id": true,
                    }
                }
            }
            "tools": ["NowAgent_getAgents","NowAgent_invokeAgent","NowAgent_retrieveMessage"]
        },
        {
            "name": "NowAgent_getAgents",
            "function": {
                "description": """
Returns a list of of available ServiceNow Ai Agents
```
                """,
                "parameters": {
                    "type": "object",
                    "properties": {
                        "inquiry": {
                            "type": "string",
                            "description": "The inquiry for which response is sought."
                        },
                    },
                    "required": ["inquiry"]
                }
            },
            "class": "nowagent_api_get_agents.NowAgentAPIGetAgents"
        },
         {
            "name": "NowAgent_invokeAgent",
            "function": {
                "description": """
submits an inquiry to a servicenow ai agent specified by the sys id
```
                """,
                "parameters": {
                    "type": "object",
                    "properties": {
                        "inquiry": {
                            "type": "string",
                            "description": "The inquiry for which response is sought."
                        },
                        "agent_id": {
                            "type": "string",
                            "description": "The sys_id of the ai agent."
                        },
                    },
                    "required": ["inquiry","agent_id"]
                }
            },
            "class": "nowagent_api_send_message.NowAgentSendMessage"
        },
        {
            "name": "NowAgent_retrieveMessage",
            "function": {
                "description": """
Returns the response from a ServiceNow AI agent
```
                """
              
            },
            "class": "nowagent_api_retrieve_message.NowAgentRetrieveMessage"
        }
    ]
}
